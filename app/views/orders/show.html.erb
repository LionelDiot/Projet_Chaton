<h1> Ma commande du <%= @order.created_at.to_date %></h1>
<div class="container d-flex flex-column justify-content-start align-items-center">

  <% if @order.titles.any? %>
  <ul class="list-group list-group-flush m-4">

    <% @order.titles.each_with_index do |title, i| %>
    <li class="list-group-item list-group-item-action d-flex gap-3 py-3">
      <img src="<%= @order.urls[i] %>" alt="<%= @order.titles[i] %>" class="rounded w-25 img-fluid">
      <div class="d-flex gap-3 w-100 justify-content-around">
        <div class="d-flex justify-content-between flex-column">
          <div class="text-start">
            <h6 class="mb-0"><%= @order.titles[i] %></h6>
          </div>
        </div>
      </div>
    </li>
    <% end %>

    <li class="list-group-item d-flex gap-5 py-3 justify-content-end">
      <p class="mb-0">Total de la commande :</p>
      <strong class="text-nowrap"><%= number_to_currency(@order.total, unit: "â‚¬", separator: ",", delimiter: "", format: "%n %u") %></strong>
    </li>

  </ul>
  
  <% else %>
    <%= render "empty_order" %>
  <% end %>
</div>
