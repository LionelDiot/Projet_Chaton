    <div class="card-body">
      <h5 class="card-title"><%= photo.title %></h5>
      <p class="card-text"><%= photo.description %></p>
      <p class="card-text"></p>
      <div class="d-flex justify-content-between align-items-center">
        <strong class="text-secondary"><%= photo.price %>&nbsp;â‚¬</strong>
        <div class="btn-group">
          <%= render partial: "/shared/buttons/view", locals: { custom_classes: 'btn-sm btn-outline-primary' } %>
          <%= render partial: "/shared/buttons/add_to_cart", locals: { custom_classes: 'btn-sm btn-outline-primary' } %>
        </div>
      </div>
    </div>
  </div>
</div>
