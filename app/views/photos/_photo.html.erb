<div id="photos" class="col">
  <div id="<%= dom_id photo %>" class="card">
    <img src="<%= photo.image_url %>" alt="<%= photo.title %>" class="card-img-top">
    <div class="card-body">
      <h5 class="card-title"><%= photo.title %></h5>
      <p class="card-text"><%= photo.description %></p>
      <p class="card-text"></p>
      <div class="d-flex justify-content-between align-items-center">
        <strong class="text-secondary"><%= photo.price %>&nbsp;â‚¬</strong>
        <div class="btn-group">
        <%= link_to root_path, class: "btn btn-sm btn-outline-primary" do %>
          <%= render "/shared/buttons/view" %>
        <% end %>
        <%= link_to add_to_cart_path(id: photo.id), data:{turbo_method: :post}, class: "btn btn-sm btn-outline-primary" do %>
          <%= render "/shared/buttons/add_to_cart" %>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
