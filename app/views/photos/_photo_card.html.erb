<div id="photos" class="col">
  <div id="<%= dom_id photo %>" class="card">
    <img src="<%= photo.image_url %>" alt="<%= photo.title %>" class="card-img-top">
    <div class="position-absolute top-0 start-0 w-100">
      <%= link_to photo_path(photo), class: "btn btn-sm btn-primary m-3 position-absolute start-0" do %>
        <%= render "/shared/buttons/view" %>
      <% end %>
    </div>
    <div class="card-body">
      <h5 class="card-title"><%= photo.title %></h5>
      <p class="card-text"><%= photo.description %></p>
      <p class="card-text"></p>
      <div class="d-flex justify-content-between align-items-center">
        <strong class="text-secondary"><%= photo.price %>&nbsp;â‚¬</strong>
        <%= button_to add_to_cart_path(id: photo.id), class: "btn btn-sm btn-outline-primary" do %>
          <%= render "/shared/buttons/add_to_cart" %>
        <% end %>
      </div>
    </div>
  </div>
</div>