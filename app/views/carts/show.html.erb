<p style="color: green"><%= notice %></p>

<div class="container w-50 d-flex flex-column justify-content-start align-items-center">
  <% if @cart.photos.any? %>
    <%= render @cart %>
    <%= link_to root_path, class: "btn btn-sm btn-outline-primary object-fit-contain" do %>
      <%= render "/shared/buttons/confirm_order" %>
    <% end %>
  <% else %>
    <%= render "empty_cart" %>
  <% end %>
</div>
